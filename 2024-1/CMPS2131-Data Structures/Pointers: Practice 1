#include <iostream>
using namespace std;

int main()
{
    string ar;
    
    cout<<"This program will write any word you type...BACKWARDS!!! \n Enter your word of choice: ";
    cin>>ar;
    
    int counter=ar.length();
    char *ptr=&ar[0];
    
    for(int i = counter - 1; i >= 0; i--)
    {
        cout << *(ptr + i);
    }
    
    
    

    return 0;
}
