#include <iostream>

using namespace std;

int main()
{
    int sales, product, salary;
    
    cout<<"Enter sales in dollars (-1 to end): $";
    cin>>sales;
    
    while(sales>-1)
    {
        product=sales*(.09);
        salary=product+200;
        cout<<"Salary is: $"<<salary<<endl;
        
        cout<<"Enter sales in dollars (-1 to end): $";
        cin>>sales;
    }

    return 0;
}
